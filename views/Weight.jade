extends layout

block content
    h1= title
    canvas(id="myChart" width="400" height="400")

    script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js").
    script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.3/Chart.bundle.min.js").
    script.
        var pData = !{JSON.stringify(plotData)};
        var ctx = document.getElementById("myChart");
        var labs = [];
        var dataValues = [];
        for (var i = 0; i < pData.length; i++) {
            var t = new Date(pData[i].timestamp);
            labs.push(t.toISOString());
            dataValues.push(pData[i].value_info.value)
        }

        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labs,
                datasets: [{
                    label: 'Weight',
                    data: dataValues,
                    backgroundColor: [
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                    ],
                    borderColor: [
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                        'rgba(122, 255, 255, 0.2)',
                    ],
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: false,
                        }
                    }]
                }
            }
        });
